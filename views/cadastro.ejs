  <!DOCTYPE html>
  <html lang="pt-br">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Formulário de Cadastro</title>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
      <link rel="stylesheet" href="/css/cadastro.css">
  </head>
  <body class="d-flex justify-content-center align-items-center m-5 text-center">

      <div class="formulario-cadastro m-5">
          <div class="titulo text-center">
              <h1 class="m-5">Cadastre-se</h1>
          </div>

          <form action="/cadastro" method="post">
              <div class="input-group mb-3 ml-5 col-10">
                  <input type="text" class="form-control col-md-10 ml-4 inputs" name="nome" id="nome" placeholder="Primeiro nome" aria-label="Primeiro nome" aria-describedby="basic-addon1">
              </div>
              <div class="input-group mb-3 ml-5 col-10">
                  <input type="email" class="form-control col-md-10 ml-4 inputs" name="email" id="email" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1">
                </div>            
                <div class="input-group mb-3 ml-5 col-10">
                  <input type="password" class="form-control col-md-10 ml-4 inputs" name="senha" id="senha" placeholder="Senha" aria-label="Senha" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb- ml-5 col-10">
                  <input type="password" class="form-control col-md-10 ml-4 inputs" name="conf_senha" id="conf-senha" placeholder="Confirme sua senha" aria-label="confirmação de senha" aria-describedby="basic-addon1">
                </div>
                <% if (typeof alertaCadastro !== 'undefined' && alertaCadastro !== null) { %>
                  <div class="m-2" id="alerta">
                    <%= alertaCadastro %>
                  </div>
                  <% } %>
                <div class="enviar-dados mt-4 m-3">
                  <button type="submit" class="btn btn-primary btn-cadastro">CADASTRAR</button>
                </div>
                <a href="/login"  class="mt-3 link-login">Já tem uma conta?</a>   
              </form>
      </div>

      <script src="/js/cadastro.js"></script>
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
  </html>